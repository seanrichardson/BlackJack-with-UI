  <Window.Background>
    <VisualBrush TileMode="Tile"
                 Viewport="0,0,0.20,0.25">
      <VisualBrush.Visual>
        <Image Source="Images/Table6.jpg" />
      </VisualBrush.Visual>
    </VisualBrush>
  </Window.Background>
  <Window.DataContext>
    <vms:TableVM />
  </Window.DataContext>
  <Window.Resources>
    <Style TargetType="Button">
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="{x:Type Button}">
            <Border Name="ButtonStyle"
                    Grid.Column="1"
                    Grid.Row="1"
                    CornerRadius="5">
              <Border.Style>
                <Style>
                  <Setter Property="Border.Background">
                    <Setter.Value>
                      <LinearGradientBrush EndPoint="2.803,-1.456"
                                           StartPoint="-0.395,1.66">
                        <GradientStop Color="#FFEEEEEE"
                                      Offset="0.1" />
                        <GradientStop Color="Black"
                                      Offset="1" />
                      </LinearGradientBrush>
                    </Setter.Value>
                  </Setter>
                  <Style.Triggers>
                    <Trigger Property="Border.IsMouseOver"
                             Value="True">
                      <Setter Property="Border.Background">
                        <Setter.Value>
                          <LinearGradientBrush EndPoint="2.803,-1.456"
                                               StartPoint="-0.395,1.66">
                            <GradientStop Color="#FFEEEEEE"
                                          Offset="0.206" />
                            <GradientStop Color="Black"
                                          Offset="1" />
                          </LinearGradientBrush>
                        </Setter.Value>
                      </Setter>
                    </Trigger>
                    <Trigger Property="Border.IsEnabled"
                             Value="false">
                      <Setter Property="Border.Background">
                        <Setter.Value>
                          <LinearGradientBrush EndPoint="2.803,-1.456"
                                               StartPoint="-0.395,1.66">
                            <GradientStop Color="#FFEEEEEE"
                                          Offset="0.206" />
                            <GradientStop Color="Black"
                                          Offset="1" />
                          </LinearGradientBrush>
                        </Setter.Value>
                      </Setter>
                      <Setter Property="TextBlock.Foreground"
                              Value="#88000000">
                      </Setter>
                    </Trigger>
                  </Style.Triggers>
                </Style>
              </Border.Style>
              <ContentPresenter HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
            </Border>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>
    <DataTemplate DataType="{x:Type vms:CardVM}">
      <Viewbox Height="160"
               Width="100"
               Margin="{Binding CardOffset}"
               LayoutTransform="{Binding CardTransform}">
        <Grid Height="252"
              Width="182">
          <Image Source="Images/Card.jpg">
            <Image.Style>
              <Style>
                <Style.Setters>
                  <Setter Property="Grid.Visibility"
                          Value="Visible" />
                </Style.Setters>
                <Style.Triggers>
                  <DataTrigger Binding="{Binding FaceUp}"
                               Value="true">
                    <DataTrigger.Setters>
                      <Setter Property="Grid.Visibility"
                              Value="Hidden" />
                    </DataTrigger.Setters>
                  </DataTrigger>
                </Style.Triggers>
              </Style>
            </Image.Style>
            <Image.Clip>
              <RectangleGeometry Rect="0,0,158,249"
                                 RadiusX="20"
                                 RadiusY="20">
              </RectangleGeometry>
            </Image.Clip>
          </Image>
          <Image>
            <Image.Style>
              <Style>
                <Style.Setters>
                  <Setter Property="Grid.Visibility"
                          Value="Hidden" />
                </Style.Setters>
                <Style.Triggers>
                  <DataTrigger Binding="{Binding FaceUp}"
                               Value="true">
                    <DataTrigger.Setters>
                      <Setter Property="Grid.Visibility"
                              Value="Visible" />
                    </DataTrigger.Setters>
                  </DataTrigger>
                </Style.Triggers>
              </Style>
            </Image.Style>
            <Image.Source>
              <CroppedBitmap Source="Images/FaceCardSprite2.png"
                             SourceRect="{Binding CardSource}" />
            </Image.Source>
          </Image>
        </Grid>
        <Viewbox.BitmapEffect>
          <DropShadowBitmapEffect ShadowDepth="2" />
        </Viewbox.BitmapEffect>
      </Viewbox>
    </DataTemplate>
    
